<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="12dp"
    android:paddingEnd="4dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@drawable/bg_result_item"
    android:gravity="center_vertical">

    <!-- Clickable area for navigating to location -->
    <LinearLayout
        android:id="@+id/result_item_clickable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <!-- Location Icon -->
        <ImageView
            android:id="@+id/result_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_location_pin"
            android:contentDescription="@string/location_icon_desc" />

        <!-- Text Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Place Name -->
            <TextView
                android:id="@+id/result_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#EEEEEE"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="New York City" />

            <!-- Full Address -->
            <TextView
                android:id="@+id/result_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#888888"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                tools:text="New York, United States of America" />

        </LinearLayout>

    </LinearLayout>

    <!-- Drop marker button -->
    <ImageButton
        android:id="@+id/result_drop_marker"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_location_pin"
        android:contentDescription="@string/drop_marker_button_desc"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="6dp" />

    <!-- Navigate in Google Maps button -->
    <ImageButton
        android:id="@+id/result_navigate"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_navigate"
        android:contentDescription="@string/navigate_button_desc"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="6dp" />

</LinearLayout>

